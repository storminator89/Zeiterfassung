{
    "openapi": "3.0.0",
    "info": {
      "title": "Zeiterfassung API",
      "version": "1.0"
    },
    "paths": {
      "/api.php/login": {
        "post": {
          "summary": "User login",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  },
                  "required": ["username", "password"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful login",
              "content": {
                "application/json": {
                  "examples": {
                    "success": {
                      "summary": "Successful login",
                      "value": {
                        "success": true,
                        "token": "your_jwt_token_here"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Invalid credentials",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Invalid credentials",
                      "value": {
                        "success": false,
                        "message": "Invalid credentials"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/api.php/workentry": {
        "post": {
          "summary": "Create new work entry",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "startzeit": {
                      "type": "string"
                    },
                    "endzeit": {
                      "type": "string"
                    },
                    "pause": {
                      "type": "integer"
                    },
                    "beschreibung": {
                      "type": "string"
                    },
                    "standort": {
                      "type": "string"
                    }
                  },
                  "required": ["startzeit", "endzeit", "pause", "beschreibung", "standort"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Work entry created",
              "content": {
                "application/json": {
                  "examples": {
                    "success": {
                      "summary": "Work entry created",
                      "value": {
                        "success": true,
                        "message": "Eintrag erstellt",
                        "data": {
                          "id": 1,
                          "startzeit": "2024-05-24T09:00:00",
                          "endzeit": "2024-05-24T17:00:00",
                          "pause": 60,
                          "beschreibung": "Worked on project X",
                          "standort": "Office",
                          "user_id": 1
                        }
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Unauthorized",
                      "value": {
                        "success": false,
                        "message": "Authorization header missing"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Internal server error",
                      "value": {
                        "success": false,
                        "message": "Internal server error"
                      }
                    }
                  }
                }
              }
            }
          },
          "security": [
            {
              "bearerAuth": []
            }
          ]
        }
      },
      "/api.php/setendzeit": {
        "post": {
          "summary": "Set end time of a specific work entry",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    }
                  },
                  "required": ["id"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "End time updated",
              "content": {
                "application/json": {
                  "examples": {
                    "success": {
                      "summary": "End time updated",
                      "value": {
                        "success": true,
                        "message": "Endzeit aktualisiert",
                        "id": 1
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Unauthorized",
                      "value": {
                        "success": false,
                        "message": "Authorization header missing"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Internal server error",
                      "value": {
                        "success": false,
                        "message": "Internal server error"
                      }
                    }
                  }
                }
              }
            }
          },
          "security": [
            {
              "bearerAuth": []
            }
          ]
        }
      },
      "/api.php/users": {
        "get": {
          "summary": "Get all users",
          "responses": {
            "200": {
              "description": "List of users",
              "content": {
                "application/json": {
                  "examples": {
                    "success": {
                      "summary": "List of users",
                      "value": {
                        "success": true,
                        "data": [
                          {
                            "id": 1,
                            "username": "admin",
                            "email": "admin@example.com",
                            "role": "admin"
                          },
                          {
                            "id": 2,
                            "username": "user",
                            "email": "user@example.com",
                            "role": "user"
                          }
                        ]
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Unauthorized",
                      "value": {
                        "success": false,
                        "message": "Authorization header missing"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Internal server error",
                      "value": {
                        "success": false,
                        "message": "Internal server error"
                      }
                    }
                  }
                }
              }
            }
          },
          "security": [
            {
              "bearerAuth": []
            }
          ]
        }
      },
      "/api.php/timeentries": {
        "get": {
          "summary": "Get all time entries for the authenticated user",
          "responses": {
            "200": {
              "description": "List of time entries",
              "content": {
                "application/json": {
                  "examples": {
                    "success": {
                      "summary": "List of time entries",
                      "value": {
                        "success": true,
                        "data": [
                          {
                            "id": 1,
                            "startzeit": "2024-05-24T09:00:00",
                            "endzeit": "2024-05-24T17:00:00",
                            "pause": 60,
                            "beschreibung": "Worked on project X",
                            "standort": "Office",
                            "user_id": 1
                          },
                          {
                            "id": 2,
                            "startzeit": "2024-05-25T09:00:00",
                            "endzeit": "2024-05-25T17:00:00",
                            "pause": 60,
                            "beschreibung": "Worked on project Y",
                            "standort": "Office",
                            "user_id": 1
                          }
                        ]
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Unauthorized",
                      "value": {
                        "success": false,
                        "message": "Authorization header missing"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Internal server error",
                      "value": {
                        "success": false,
                        "message": "Internal server error"
                      }
                    }
                  }
                }
              }
            }
          },
          "security": [
            {
              "bearerAuth": []
            }
          ]
        }
      },
      "/api.php/timeentry/{id}": {
        "delete": {
          "summary": "Delete a specific time entry",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Time entry deleted",
              "content": {
                "application/json": {
                  "examples": {
                    "success": {
                      "summary": "Time entry deleted",
                      "value": {
                        "success": true,
                        "message": "Eintrag gelöscht"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Unauthorized",
                      "value": {
                        "success": false,
                        "message": "Authorization header missing"
                      }
                    }
                  }
                }
              }
            },
            "403": {
              "description": "Not allowed to delete",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Not allowed to delete",
                      "value": {
                        "success": false,
                        "message": "Nicht erlaubt zu löschen"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Entry not found",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Entry not found",
                      "value": {
                        "success": false,
                        "message": "Eintrag nicht gefunden"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error",
              "content": {
                "application/json": {
                  "examples": {
                    "error": {
                      "summary": "Internal server error",
                      "value": {
                        "success": false,
                        "message": "Internal server error"
                      }
                    }
                  }
                }
              }
            }
          },
          "security": [
            {
              "bearerAuth": []
            }
          ]
        }
      }
    },
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    }
  }
  